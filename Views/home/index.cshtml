@{
    ViewData["Title"] = "Citas";
}

<div class="card">
  <div class="card-content">

    <div class="field is-grouped is-grouped-centered">
        <div class="control">
          <div class="select">
          <select id="IdMedicoBuscar">
            <option value='0'>Todos</option>
          </select>
          </div>
        </div>
      <p class="control">
        <input class="input" type="text" placeholder="Cliente" id="ClienteBuscar">
      </p>
      <p class="control">
        <a class="button is-dark" id="btn-filtrar">
          Submit
        </a>
      </p>
    </div>  
    </div>
</div>
<div class="card">
  <div class="card-content">
      <div id='calendar'></div>
  </div>
</div>

<div id="modal-nueva-cita" class="modal">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title">Modal title</p>
      <button class="delete" aria-label="close"></button>
    </header>
    <section class="modal-card-body">
<form id="form-cita" name="form-cita">
              <input type="text" id="IdCita" name="IdCita" style="display: none;">
              <div class="form-group">
                <label for="NombreCliente">Nombre Cliente</label>
                <input type="text" class="form-control" id="NombreCliente" name="NombreCliente">
              </div>
              <div class="form-group">
                <label for="CorreoCliente">Correo</label>
                <input type="email" class="form-control" id="CorreoCliente" name="CorreoCliente">
              </div>
              <div class="form-group">
                <label for="Movil">Móvil</label>
                <input type="text" class="form-control" id="Movil" name="Movil">
              </div>
              <div class="form-group">
                <label for="FechaInicioCita">Fecha Cita</label>
                <input type="text" class="form-control" id="FechaInicioCita" name="FechaInicioCita">
              </div>
              <div class="form-group">
                <label for="Duracion">Duración</label>
                <select id="Duracion" name="Duracion" class="custom-select">
                  <option value="30">30 min</option>
                  <option value="60">1 hr</option>
                  <option value="90">1 hr 30 min</option>
                  <option value="120">2 hrs</option>
                  <option value="150">2 hrs 30 min</option>
                  <option value="180">3 hrs</option>
                  <option value="210">3 hrs 30 min</option>
                  <option value="240">4 hrs</option>
                </select>
              </div>
              <div class="form-group">
                <label for="IdMedico">Médico</label>
                <select id="IdMedico" name="IdMedico" class="custom-select"></select>
              </div>
              <div class="form-group">
                <label for="IdTipo">Tipo</label>
                <select id="IdTipo" name="IdTipo" class="custom-select"></select>
              </div>
              <div class="form-group">
                <label for="Comentarios">Comentarios</label>
                <textarea id="Comentarios" name="Comentarios" class="form-control"></textarea>
              </div>
          </form>
    </section>
    <footer class="modal-card-foot">
      <button id="btn-cancelar" class="button is-success" style="display: none;">Eliminar</button>
      <button id="btn-guardar" class="button is-success">Guardar</button>
      <button id="btn-actualizar" class="button is-success" style="display: none;">Actualizar</button>
    </footer>
  </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/js/fullcalendar/core/main.min.css"/>
    <link rel="stylesheet" href="~/js/fullcalendar/daygrid/main.min.css"/>
    <link rel="stylesheet" href="~/js/fullcalendar/timegrid/main.min.css"/>
}

@section Scripts {
    <script src="~/js/fullcalendar/core/main.min.js"></script>
    <script src="~/js/fullcalendar/interaction/main.min.js"></script>
    <script src="~/js/fullcalendar/daygrid/main.min.js"></script>
    <script src="~/js/fullcalendar/timegrid/main.min.js"></script> 
    <script src="~/js/fullcalendar/moment/main.min.js"></script>
    <script src="~/js/fullcalendar/core/locales/es.js"></script>
    <script src="~/js/fullcalendar/resource-common/main.min.js"></script> 
    <script src="~/js/fullcalendar/resource-daygrid/main.min.js"></script> 
    <script src="~/js/fullcalendar/resource-timegrid/main.min.js"></script>
    <script src="~/js/HomeIndex.js" asp-append-version="true"></script>
}