<form class="form-inline">
  <label class="sr-only" for="IdMedicoBuscar">Médico</label>
  <select class="custom-select my-1 mr-sm-2" id="IdMedicoBuscar">
    <option value="0">Todos</option>
  </select>
  <label class="sr-only" for="ClienteBuscar">Cliente</label>
  <input type="text" class="form-control mb-2 mr-sm-2" id="ClienteBuscar">
  <button type="button" id="btn-filtrar" class="btn btn-primary mb-2">Filtrar</button>
</form>

<hr> 

<div id='calendar'></div>

<div id="modal-nueva-cita" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Nueva Cita</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <form id="form-cita" name="form-cita">
              <input type="hidden" id="IdCita" name="IdCita">
              <div class="form-group">
                <label for="NombreCliente">Nombre Cliente</label>
                <input type="text" class="form-control" id="NombreCliente" name="NombreCliente">
              </div>
              <div class="form-group">
                <label for="CorreoCliente">Correo</label>
                <input type="email" class="form-control" id="CorreoCliente" name="CorreoCliente">
              </div>
              <div class="form-group">
                <label for="Movil">Móvil</label>
                <input type="text" class="form-control" id="Movil" name="Movil">
              </div>
              <div class="form-group">
                <label for="FechaInicioCita">Inicio Cita</label>
                <input type="text" class="form-control" id="FechaInicioCita" name="FechaInicioCita">
              </div>
              <div class="form-group">
                <label for="FechaFinCita">Fin Cita</label>
                <input type="text" class="form-control" id="FechaFinCita" name="FechaFinCita">
              </div>
              <div class="form-group">
                <label for="IdMedico">Médico</label>
                <select id="IdMedico" name="IdMedico" class="custom-select"></select>
              </div>
              <div class="form-group">
                <label for="IdTipo">Tipo</label>
                <input type="text" class="form-control" id="IdTipo" name="IdTipo">
                <!-- <select id="IdTipo" name="IdTipo" class="custom-select"></select> -->
              </div>
              <div class="form-group">
                <label for="Comentarios">Comentarios</label>
                <textarea id="Comentarios" name="Comentarios" class="form-control"></textarea>
              </div>
          </form>
      </div>
      <div class="modal-footer">
        <button id="btn-cancelar" type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
        <button id="btn-guardar" type="button" class="btn btn-primary">Guardar</button>
      </div>
    </div>
  </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/js/fullcalendar/core/main.min.css" />
    <link rel="stylesheet" href="~/js/fullcalendar/daygrid/main.min.css" />
    <link rel="stylesheet" href="~/js/fullcalendar/timegrid/main.min.css" />
}

@section Scripts {
    <script src="~/js/fullcalendar/core/main.min.js" asp-append-version="true"></script>
    <script src="~/js/fullcalendar/interaction/main.min.js" asp-append-version="true"></script>
    <script src="~/js/fullcalendar/daygrid/main.min.js" asp-append-version="true"></script>
    <script src="~/js/fullcalendar/timegrid/main.min.js" asp-append-version="true"></script> 
    <script src="~/js/fullcalendar/moment/main.min.js" asp-append-version="true"></script>
    <script src="~/js/fullcalendar/core/locales/es.js" asp-append-version="true"></script>
    <script src="~/js/fullcalendar/resource-common/main.min.js" asp-append-version="true"></script> 
    <script src="~/js/fullcalendar/resource-daygrid/main.min.js" asp-append-version="true"></script> 
    <script src="~/js/fullcalendar/resource-timegrid/main.min.js" asp-append-version="true"></script>
    <script src="~/js/HomeIndex.js" asp-append-version="true"></script>
}